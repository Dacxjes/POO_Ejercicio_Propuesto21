
package poo_tringulo_ejercicio21;

import java.util.Scanner;

public class POO_Tringulo_ejercicio21 {

     public static void main(String[] args) {
        
         Scanner triangulo = new Scanner (System.in);
         
         double lado1, lado2, lado3, perimetro, s, area;
         
         System.out.println("Ingrese el lado 1 del triangulo: ");
         lado1 = triangulo.nextDouble();
         System.out.println("Ingrese el lado 2 del triangulo: ");
         lado2 = triangulo.nextDouble();
         System.out.println("Ingrese el lado 3 del triangulo: ");
         lado3 = triangulo.nextDouble();
         
         perimetro = lado1 + lado2 + lado3;
         s= perimetro /2;
         area = Math.sqrt((s*(s-lado1)*(s-lado2)*(s-lado3)));
         
         System.out.println("El triangulo de lados: " + lado1 + ", " + lado2 + ", " + lado3 + ", tiene: ");
         System.out.println("Perimetro: " + perimetro);
         System.out.println("Semiperimetro: " + s);
         System.out.println("area: " + area);
         
         
    }
    
}
